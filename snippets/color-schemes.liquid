{%- liquid
  assign body_font_bold = settings.type_body_font | font_modify: 'weight', 'bold'
  assign body_font_italic = settings.type_body_font | font_modify: 'style', 'italic'
  assign body_font_bold_italic = body_font_bold | font_modify: 'style', 'italic'
%}

{% style %}
  {{ settings.type_body_font | font_face: font_display: 'swap' }}
  {{ body_font_bold | font_face: font_display: 'swap' }}
  {{ body_font_italic | font_face: font_display: 'swap' }}
  {{ body_font_bold_italic | font_face: font_display: 'swap' }}
  {{ settings.type_header_font | font_face: font_display: 'swap' }}

  {% for scheme in settings.color_schemes -%}
    {% if forloop.first %}
      :root,
    {% endif %}

    .ColorScheme--{{ scheme.id | camelcase }} {
      --t-background-dark: rgba({{ scheme.settings.background_dark.red }},{{ scheme.settings.background_dark.green }},{{ scheme.settings.background_dark.blue }});
      --t-background: rgba({{ scheme.settings.background.red }},{{ scheme.settings.background.green }},{{ scheme.settings.background.blue }});

      --t-background-light: rgba({{ scheme.settings.background_light.red }},{{ scheme.settings.background_light.green }},{{ scheme.settings.background_light.blue }});

      {% assign background_light_hover = scheme.settings.background_light | color_darken: 10 %}
      --t-background-light-hover: rgba({{ background_light_hover.red }},{{ background_light_hover.green }},{{ background_light_hover.blue }});

      {% assign background_light_opaque = scheme.settings.background_light | color_modify: 'alpha', 0.66 %}
      --t-background-light-opaque: rgba({{ background_light_opaque.red }},{{ background_light_opaque.green }},{{ background_light_opaque.blue }}, {{ background_light_opaque.alpha }});

      --t-text: rgba({{ scheme.settings.text.red }},{{ scheme.settings.text.green }},{{ scheme.settings.text.blue }});
      --t-text-muted: rgba({{ scheme.settings.text_muted.red }},{{ scheme.settings.text_muted.green }},{{ scheme.settings.text_muted.blue }});

      --t-highlight: rgba({{ scheme.settings.highlight.red }},{{ scheme.settings.highlight.green }},{{ scheme.settings.highlight.blue }});
      --t-border: rgba({{ scheme.settings.border.red }},{{ scheme.settings.border.green }},{{ scheme.settings.border.blue }});
      --t-border-muted: rgba({{ scheme.settings.border_muted.red }},{{ scheme.settings.border_muted.green }},{{ scheme.settings.border_muted.blue }});

      --t-primary: rgba({{ scheme.settings.primary.red }},{{ scheme.settings.primary.green }},{{ scheme.settings.primary.blue }});

      {% assign primary_hover = scheme.settings.primary | color_darken: 10 %}
      --t-primary-hover: rgba({{ primary_hover.red }},{{ primary_hover.green }},{{ primary_hover.blue }});

      --t-secondary: rgba({{ scheme.settings.secondary.red }},{{ scheme.settings.secondary.green }},{{ scheme.settings.secondary.blue }});

      {% assign secondary_hover = scheme.settings.secondary | color_darken: 10 %}
      --t-secondary-hover: rgba({{ secondary_hover.red }},{{ secondary_hover.green }},{{ secondary_hover.blue }});

      --t-backdrop-background-color: rgba(0, 0, 0, 0.5);

      --t-text-sale: rgb(177, 0, 0);
      --t-danger: rgba({{ scheme.settings.danger.red }},{{ scheme.settings.danger.green }},{{ scheme.settings.danger.blue }});
      --t-warning: rgba({{ scheme.settings.warning.red }},{{ scheme.settings.warning.green }},{{ scheme.settings.warning.blue }});
      --t-success: rgba({{ scheme.settings.success.red }},{{ scheme.settings.success.green }},{{ scheme.settings.success.blue }});
      --t-info: rgba({{ scheme.settings.info.red }},{{ scheme.settings.info.green }},{{ scheme.settings.info.blue }});
    }
  {% endfor %}

  :root {
    --font-body-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    --font-body-style: {{ settings.type_body_font.style }};
    --font-body-weight: {{ settings.type_body_font.weight }};
    --font-body-weight-bold: {{ settings.type_body_font.weight | plus: 300 | at_most: 1000 }};

    --font-heading-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    --font-heading-style: {{ settings.type_header_font.style }};
    --font-heading-weight: {{ settings.type_header_font.weight }};

    --page-width: {{ settings.page_width }}px;
  }
{% endstyle %}
