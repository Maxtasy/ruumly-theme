{%- liquid
  assign body_font_bold = settings.type_body_font | font_modify: 'weight', 'bold'
  assign body_font_italic = settings.type_body_font | font_modify: 'style', 'italic'
  assign body_font_bold_italic = body_font_bold | font_modify: 'style', 'italic'
%}

{% style %}
  {{ settings.type_body_font | font_face: font_display: 'swap' }}
  {{ body_font_bold | font_face: font_display: 'swap' }}
  {{ body_font_italic | font_face: font_display: 'swap' }}
  {{ body_font_bold_italic | font_face: font_display: 'swap' }}
  {{ settings.type_header_font | font_face: font_display: 'swap' }}

  {% for scheme in settings.color_schemes -%}
    {% if forloop.first %}
      :root,
    {% endif %}

    .ColorScheme--{{ scheme.id | camelcase }} {
      --color-surface: rgba({{ scheme.settings.surface.red }},{{ scheme.settings.surface.green }},{{ scheme.settings.surface.blue }});
      --color-surface-secondary: rgba({{ scheme.settings.surface_secondary.red }},{{ scheme.settings.surface_secondary.green }},{{ scheme.settings.surface_secondary.blue }});

      --color-text: rgba({{ scheme.settings.text.red }},{{ scheme.settings.text.green }},{{ scheme.settings.text.blue }});

      --color-link: rgba({{ scheme.settings.link.red }},{{ scheme.settings.link.green }},{{ scheme.settings.link.blue }});
      --color-link-hover: rgba({{ scheme.settings.link_hover.red }},{{ scheme.settings.link_hover.green }},{{ scheme.settings.link_hover.blue }});

      --primary-button-background: rgba({{ scheme.settings.primary_button_background.red }},{{ scheme.settings.primary_button_background.green }},{{ scheme.settings.primary_button_background.blue }});
      --primary-button-background-hover: rgba({{ scheme.settings.primary_button_background_hover.red }},{{ scheme.settings.primary_button_background_hover.green }},{{ scheme.settings.primary_button_background_hover.blue }});
      --primary-button-text: rgba({{ scheme.settings.primary_button_text.red }},{{ scheme.settings.primary_button_text.green }},{{ scheme.settings.primary_button_text.blue }});
      --primary-button-text-hover: rgba({{ scheme.settings.primary_button_text_hover.red }},{{ scheme.settings.primary_button_text_hover.green }},{{ scheme.settings.primary_button_text_hover.blue }});
      --primary-button-border: rgba({{ scheme.settings.primary_button_border.red }},{{ scheme.settings.primary_button_border.green }},{{ scheme.settings.primary_button_border.blue }});
      --primary-button-border-hover: rgba({{ scheme.settings.primary_button_border_hover.red }},{{ scheme.settings.primary_button_border_hover.green }},{{ scheme.settings.primary_button_border_hover.blue }});

      --secondary-button-background: rgba({{ scheme.settings.secondary_button_background.red }},{{ scheme.settings.secondary_button_background.green }},{{ scheme.settings.secondary_button_background.blue }});
      --secondary-button-background-hover: rgba({{ scheme.settings.secondary_button_background_hover.red }},{{ scheme.settings.secondary_button_background_hover.green }},{{ scheme.settings.secondary_button_background_hover.blue }});
      --secondary-button-text: rgba({{ scheme.settings.secondary_button_text.red }},{{ scheme.settings.secondary_button_text.green }},{{ scheme.settings.secondary_button_text.blue }});
      --secondary-button-text-hover: rgba({{ scheme.settings.secondary_button_text_hover.red }},{{ scheme.settings.secondary_button_text_hover.green }},{{ scheme.settings.secondary_button_text_hover.blue }});
      --secondary-button-border: rgba({{ scheme.settings.secondary_button_border.red }},{{ scheme.settings.secondary_button_border.green }},{{ scheme.settings.secondary_button_border.blue }});
      --secondary-button-border-hover: rgba({{ scheme.settings.secondary_button_border_hover.red }},{{ scheme.settings.secondary_button_border_hover.green }},{{ scheme.settings.secondary_button_border_hover.blue }});

      --color-border: rgba({{ scheme.settings.border.red }},{{ scheme.settings.border.green }},{{ scheme.settings.border.blue }});
    }
  {% endfor %}

  :root {
    --font-body-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    --font-body-style: {{ settings.type_body_font.style }};
    --font-body-weight: {{ settings.type_body_font.weight }};
    --font-body-weight-bold: {{ settings.type_body_font.weight | plus: 300 | at_most: 1000 }};

    --font-heading-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    --font-heading-style: {{ settings.type_header_font.style }};
    --font-heading-weight: {{ settings.type_header_font.weight }};

    --page-width: {{ settings.page_width }}px;
  }
{% endstyle %}
