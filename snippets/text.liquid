{% doc %}
  Renders a Text component.

  @param {string} [as] - The HTML tag to use. Defaults to p
  @param {string} text - text
  @param {string} [variant] - Text variant ('heading-large', 'heading-medium', 'heading-small', 'body-large', 'body-medium', 'body-small')
{% enddoc %}

{% assign as = as | default: 'p' %}
{% assign variant = variant | default: 'body-medium' %}

<{{ as }} class="Text{% if variant %} Text--{{ variant | camelcase }}{% endif %}">
  {{ text }}
</{{ as }}>

{% stylesheet %}
  .Text {
    font-size: 16px;
    line-height: 1.5;
    font-family: var(--text-font-family);
    color: var(--text-color);
  }

  .Text--BodySmall {
    font-size: 12px;
    font-family: var(--text-font-family);
  }

  .Text--BodyMedium {
    font-size: 16px;
    font-family: var(--text-font-family);
  }

  .Text--BodyLarge {
    font-size: 24px;
    font-family: var(--text-font-family);
  }

  .Text--HeadingSmall {
    font-size: 24px;
    font-family: var(--heading-font-family);
  }

  .Text--HeadingMedium {
    font-size: 32px;
    font-family: var(--heading-font-family);
  }

  .Text--HeadingLarge {
    font-size: 40px;
    font-family: var(--heading-font-family);
  }
{% endstylesheet %}
