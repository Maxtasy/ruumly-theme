{% doc %}
  Renders a Text component.

  @param {string} [as] - The HTML tag to use. Defaults to `p`.
  @param {string} text - The rendered text.
  @param {string} [variant] - Text variant. Defaults to `body-medium` ('heading-large', 'heading-medium', 'heading-small', 'body-large', 'body-medium', 'body-small')
  @param {string} [color] - Text color. Defaults to 'primary' ('inherit', 'primary', 'sale', 'destructive', 'success', 'warning')
{% enddoc %}

{% assign as = as | default: 'p' %}
{% assign variant = variant | default: 'body-medium' %}
{% assign color = color | default: 'primary' %}

<{{ as }} class="Text Text--{{ variant | camelcase }} Text--Color{{ color | camelcase }}">
  {{ text }}
</{{ as }}>

{% stylesheet %}
  .Text {
    font-family: var(--text-font-family);
    font-size: 16px;
    line-height: 1.2;
  }

  .Text--ColorInherit {
    color: inherit;
  }

  .Text--ColorPrimary {
    color: var(--text-color-primary);
  }

  .Text--ColorSale {
    color: var(--text-color-sale);
  }

  .Text--ColorDestructive {
    color: var(--text-color-destructive);
  }

  .Text--ColorSuccess {
    color: var(--text-color-success);
  }

  .Text--ColorWarning {
    color: var(--text-color-warning);
  }

  .Text--BodySmall {
    font-family: var(--text-font-family);
    font-size: 12px;
  }

  .Text--BodyMedium {
    font-family: var(--text-font-family);
    font-size: 16px;
  }

  .Text--BodyLarge {
    font-family: var(--text-font-family);
    font-size: 24px;
  }

  .Text--HeadingExtraSmall {
    font-family: var(--heading-font-family);
    font-size: 16px;
    line-height: 1.5;
  }

  .Text--HeadingSmall {
    font-family: var(--heading-font-family);
    font-size: 24px;
    line-height: 1.5;
  }

  .Text--HeadingMedium {
    font-family: var(--heading-font-family);
    font-size: 32px;
    line-height: 1.5;
  }

  .Text--HeadingLarge {
    font-family: var(--heading-font-family);
    font-size: 40px;
    line-height: 1.5;
  }

  .Text--HeadingExtraLarge {
    font-family: var(--heading-font-family);
    font-size: 56px;
    line-height: 1.5;
  }

  .Text--HeadingUltraLarge {
    font-family: var(--heading-font-family);
    font-size: 72px;
    line-height: 1.5;
  }
{% endstylesheet %}
