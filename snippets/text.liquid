{% doc %}
  Renders a Text component.

  @param {string} [as] - The HTML tag to use. Defaults to `p`.
  @param {string} text - The rendered text.
  @param {string} [variant] - Text variant. Defaults to `body-medium` ('heading-large', 'heading-medium', 'heading-small', 'body-large', 'body-medium', 'body-small')
  @param {string} [color] - Text color. Defaults to 'primary' ('inherit', 'primary', 'primary-muted', 'sale', 'destructive', 'success', 'warning')
  @param {string} [transform] - Text tramsform. ('uppercase')
{% enddoc %}

{% assign as = as | default: 'p' %}
{% assign variant = variant | default: 'body-medium' %}
{% assign color = color | default: 'primary' %}

<{{ as }}
  class="
    Text
    Text--{{ variant | camelcase }}
    Text--Color{{ color | camelcase }}
    {% if transform %}
      Text--Transform{{ transform | camelcase }}
    {% endif %}
  "
>
  {{ text }}
</{{ as }}>

{% stylesheet %}
  .Text {
    font-family: var(--text-font-family);
    font-size: 16px;
    line-height: 1.2;
  }

  .Text--ColorInherit {
    color: inherit;
  }

  .Text--ColorPrimary {
    color: var(--t-text);
  }

  .Text--ColorPrimaryMuted {
    color: var(--t-text-muted);
  }

  .Text--ColorSale {
    color: var(--t-text-sale);
  }

  .Text--ColorDestructive {
    color: var(--t-danger);
  }

  .Text--ColorSuccess {
    color: var(--t-success);
  }

  .Text--ColorWarning {
    color: var(--t-warning);
  }

  .Text--BodySmall {
    font-family: var(--text-font-family);
    font-size: var(--text-size-body-small);
  }

  .Text--BodyMedium {
    font-family: var(--text-font-family);
    font-size: var(--text-size-body-medium);
  }

  .Text--BodyLarge {
    font-family: var(--text-font-family);
    font-size: var(--text-size-body-large);
  }

  .Text--HeadingExtraSmall {
    font-family: var(--heading-font-family);
    font-size: var(--text-size-heading-extra-small);
    line-height: var(--heading-line-height);
  }

  .Text--HeadingSmall {
    font-family: var(--heading-font-family);
    font-size: var(--text-size-heading-small);
    line-height: var(--heading-line-height);
  }

  .Text--HeadingMedium {
    font-family: var(--heading-font-family);
    font-size: var(--text-size-heading-medium);
    line-height: var(--heading-line-height);
  }

  .Text--HeadingLarge {
    font-family: var(--heading-font-family);
    font-size: var(--text-size-heading-large);
    line-height: var(--heading-line-height);
  }

  .Text--HeadingExtraLarge {
    font-family: var(--heading-font-family);
    font-size: var(--text-size-heading-extra-large);
    line-height: var(--heading-line-height);
  }

  .Text--HeadingUltraLarge {
    font-family: var(--heading-font-family);
    font-size: var(--text-size-heading-ultra-large);
    line-height: var(--heading-line-height);
  }

  .Text--TransformUppercase {
    text-transform: uppercase;
  }
{% endstylesheet %}
