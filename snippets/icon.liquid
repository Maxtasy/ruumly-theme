{% stylesheet %}
  .Icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .Icon svg {
    width: 100%;
    height: 100%;
  }

  .Icon--SizeExtraSmall {
    width: var(--icon-size-xs);
    height: var(--icon-size-xs);
  }

  .Icon--SizeSmall {
    width: var(--icon-size-s);
    height: var(--icon-size-s);
  }

  .Icon--SizeMedium {
    width: var(--icon-size-m);
    height: var(--icon-size-m);
  }

  .Icon--SizeLarge {
    width: var(--icon-size-l);
    height: var(--icon-size-l);
  }

  .Icon--Destructive {
    color: var(--t-destructive);
  }

  .Icon--Success {
    color: var(--t-success);
  }

  .Icon--Warning {
    color: var(--t-warning);
  }
{% endstylesheet %}
