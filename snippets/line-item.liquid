{% doc %}
  Renders a Line Item component.

  @param {string} product_title - The title of the product.
  @param {string} [variant_title] - The title of the variant.
  @param {string} image - The image of the line item.
  @param {string} price - The price of the line item.
  @param {string} compare_at_price - The compare at price of the line item.
  @param {string} quantity - The quantity of the line item.
  @param {string} key - The key of the line item.
  @param {string} url - The URL of the line item.
{% enddoc %}

<div
  is="line-item-component"
  class="LineItem"
  data-key="{{ key }}"
>
  <a class="LineItem__Image" href="{{ url }}">
    {% render 'image', image: image, variant: 'square' %}
  </a>

  <div class="LineItem__Details">
    <a class="LineItem__Titles" href="{{ url }}">
      {% render 'text', text: product_title %}

      {% if variant_title %}
        {% render 'text', text: variant_title, variant: 'body-small' %}
      {% endif %}
    </a>

    <div class="LineItem__Price">
      {% render 'price-list', price: price, compare_at_price: compare_at_price %}
    </div>

    <div class="LineItem__Actions">
      {% render 'quantity-selector', quantity: quantity %}

      {% render 'button', text: 'Remove', variant: 'link', action: 'remove' %}
    </div>
  </div>
</div>

{% stylesheet %}
  .LineItem {
    display: flex;
    gap: var(--size-m);
  }

  .LineItem__Image {
    width: 30%;
    flex-shrink: 0;
  }

  .LineItem__Details {
    display: flex;
    flex-direction: column;
    gap: var(--size-s);
  }

  .LineItem__Titles {
    display: flex;
    flex-direction: column;
    gap: var(--size-xs);
  }

  .LineItem__Actions {
    display: flex;
    align-items: center;
    gap: var(--size-s);
  }
{% endstylesheet %}
