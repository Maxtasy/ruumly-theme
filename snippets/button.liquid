{% doc %}
  Renders a Button component.

  @param {string} [text] - Text inside the button.
  @param {string} [variant] - Button variant ('primary', 'secondary', 'icon', 'plain', link).
  @param {string} [icon] - Icon handle of the icon to render.
  @param {string} [action] - The action attribute.
  @param {string} [url] - The URL of the button.
  @param {boolean} [external] - Whether the URL should be opened in a new window.
  @param {string} [size] - Button size ('small', 'medium', 'large').
{% enddoc %}

{% assign variant = variant | default: 'primary' %}
{% assign size = size | default: 'medium' %}

{% if url %}
  <a
    class="
      Button
      Button--{{ variant | camelcase }}
      Button--Size{{ size | camelcase }}
    "
    href="{{ url }}"
    {% if external %}
      target="_blank"
    {% endif %}
  >
    {% if text %}
      {{ text }}
    {% endif %}

    {% if icon %}
      {% render 'icon', icon: icon %}
    {% endif -%}
  </a>
{% else %}
  <button
    is="button-component"
    class="Button{% if variant %} Button--{{ variant | camelcase }}{% endif %}"
    {% if action %}
      data-action="{{ action }}"
    {% endif %}
  >
    {% if text %}
      {{ text }}
    {% endif %}

    {% if icon %}
      {% render 'icon', icon: icon %}
    {% endif %}
  </button>
{% endif %}

{% stylesheet %}
  .Button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--padding-block) var(--padding-inline);
    color: var(--text-color);
    background-color: var(--background-color);
    border: var(--border-width) var(--border-style) var(--border-color);
    border-radius: var(--button-border-radius);
    user-select: none;
    transition: var(--transition-duration) var(--transition-timing);
  }

  .Button:hover {
    background-color: var(--background-color-hover);
    color: var(--text-color-hover);
    border-color: var(--border-color-hover);
  }

  .Button--Primary,
  .Button--Secondary {
    --padding-block: var(--size-m);
    --padding-inline: var(--size-xl);
    text-transform: uppercase;
    box-shadow: var(--box-shadow);
    font-weight: var(--button-font-weight);
    letter-spacing: var(--button-letter-spacing);
    font-size: var(--button-font-size);
  }

  .Button--Primary {
    --background-color: var(--primary-button-background);
    --background-color-hover: var(--primary-button-background-hover);
    --text-color: var(--primary-button-text);
    --text-color-hover: var(--primary-button-text-hover);
    --border-color: var(--primary-button-border);
    --border-color-hover: var(--primary-button-border-hover);
  }

  .Button--Secondary {
    --background-color: var(--secondary-button-background);
    --background-color-hover: var(--secondary-button-background-hover);
    --text-color: var(--secondary-button-text);
    --text-color-hover: var(--secondary-button-text-hover);
    --border-color: var(--secondary-button-border);
    --border-color-hover: var(--secondary-button-border-hover);
  }

  .Button--Icon {
    --padding-block: var(--size-xs);
    --padding-inline: var(--size-xs);
    box-shadow: var(--box-shadow);
  }

  .Button--Plain {
    --padding-block: var(--size-xs);
    --padding-inline: var(--size-xs);
    --border-color: transparent;
    --border-color-hover: transparent;
    --background-color: transparent;
    --background-color-hover: transparent;
  }

  .Button--Link {
    --padding-block: 0;
    --padding-inline: 0;
    --border-color: transparent;
    --border-color-hover: transparent;
    --background-color: transparent;
    --background-color-hover: transparent;
  }

  .Button--SizeSmall {
    --padding-block: var(--size-xs);
    --padding-inline: var(--size-xs);
  }

  .Button--SizeMedium {
    --padding-block: var(--size-m);
    --padding-inline: var(--size-xl);
  }

  .Button--SizeLarge {
    --padding-block: var(--size-l);
    --padding-inline: var(--size-xxl);
  }

  .Button[disabled] {
    opacity: 0.25;
  }
{% endstylesheet %}
