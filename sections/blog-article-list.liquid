{%- comment -%}
  Theme check is not aware that article_list exists as a setting type
{%- endcomment -%}
{%- comment -%}
  theme-check-disable ValidSchema
{%- endcomment -%}

{% assign limit = null %}
{% if section.settings.set_limit %}
  {% assign limit = section.settings.limit %}
{% endif %}

<section
  class="
    Section
    Section--PaddingBlock{{ section.settings.padding_block | camelcase }}
    ColorScheme--{{ section.settings.color_scheme.id | camelcase }}
  "
>
  <div class="Section__Inner">
    {% render 'text', text: section.settings.heading, as: 'h2', variant: 'heading-medium' %}

    {% assign blog_articles = section.settings.blog.articles | default: section.settings.blog_article_list %}

    {% render 'blog-article-list',
      blog_articles: blog_articles,
      columns_mobile: section.settings.columns_mobile,
      columns_desktop: section.settings.columns_desktop,
      limit: limit
    %}
  </div>
</section>

{% schema %}
{
  "name": "t:sections.blog_article_list.name",
  "disabled_on": {
    "groups": ["header", "footer", "aside"]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.headers.section_appearance.content"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.settings.color_scheme.label",
      "info": "t:sections.all.settings.color_scheme.info"
    },
    {
      "type": "select",
      "id": "padding_block",
      "label": "t:sections.all.settings.padding_block.label",
      "default": "medium",
      "options": [
        { "value": "none", "label": "t:sections.all.settings.padding_block.options.none.label" },
        { "value": "small", "label": "t:sections.all.settings.padding_block.options.small.label" },
        { "value": "medium", "label": "t:sections.all.settings.padding_block.options.medium.label" },
        { "value": "large", "label": "t:sections.all.settings.padding_block.options.large.label" }
      ]
    },
    {
      "type": "number",
      "id": "columns_mobile",
      "label": "t:sections.all.settings.columns_mobile.label",
      "default": 1
    },
    {
      "type": "number",
      "id": "columns_desktop",
      "label": "t:sections.all.settings.columns_desktop.label",
      "default": 3
    },
    {
      "type": "header",
      "content": "t:sections.all.headers.section_content.content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.all.settings.heading.label",
      "default": "t:sections.all.settings.heading.default"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "t:sections.blog_article_list.settings.blog.label"
    },
    {
      "type": "article_list",
      "id": "blog_article_list",
      "label": "t:sections.blog_article_list.settings.blog_article_list.label"
    },
    {
      "type": "checkbox",
      "id": "set_limit",
      "label": "t:global.settings.set_limit.label",
      "default": false
    },
    {
      "type": "number",
      "id": "limit",
      "label": "t:global.settings.limit.label",
      "default": 3,
      "info": "t:sections.blog_article_list.settings.limit.info",
      "visible_if": "{{ section.settings.set_limit }}"
    }
  ],
  "presets": [
    {
      "name": "t:sections.blog_article_list.presets.blog_article_list.name"
    }
  ]
}
{% endschema %}
