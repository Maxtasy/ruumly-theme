{% liquid
  # TODO: Add the settings for collection and product_list. For now the section only works on the collection template.
  assign products = section.settings.collection.products | default: section.settings.product_list | default: collection.products

  assign columns_mobile = null
  assign columns_desktop = null
  assign card_min_width_px = section.settings.card_min_width_px

  if section.settings.grid_settings == 'advanced'
    assign columns_mobile = section.settings.columns_mobile
    assign columns_desktop = section.settings.columns_desktop
    assign grid_gap = section.settings.grid_gap
  endif
%}

<section
  class="
    Section
    Section--PaddingBlock{{ section.settings.padding_block | camelcase }}
    ColorScheme--{{ section.settings.color_scheme.id | camelcase }}
  "
>
  <div class="Section__Inner">
    {% render 'product-grid',
      products: products,
      grid_gap: grid_gap,
      card_min_width_px: card_min_width_px,
      columns_mobile: columns_mobile,
      columns_desktop: columns_desktop
    %}
  </div>
</section>

{% schema %}
{
  "name": "t:sections.product_grid.name",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.headers.section_appearance.content"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.settings.color_scheme.label",
      "info": "t:sections.all.settings.color_scheme.info"
    },
    {
      "type": "select",
      "id": "padding_block",
      "label": "t:sections.all.settings.padding_block.label",
      "default": "medium",
      "options": [
        { "value": "none", "label": "t:sections.all.settings.padding_block.options.none.label" },
        { "value": "small", "label": "t:sections.all.settings.padding_block.options.small.label" },
        { "value": "medium", "label": "t:sections.all.settings.padding_block.options.medium.label" },
        { "value": "large", "label": "t:sections.all.settings.padding_block.options.large.label" }
      ]
    },
    {
      "type": "select",
      "id": "grid_settings",
      "label": "Grid Settings",
      "default": "auto-fit",
      "options": [
        {
          "value": "advanced",
          "label": "Advanced"
        },
        { "value": "auto-fit", "label": "Auto Fit" }
      ]
    },
    {
      "type": "number",
      "id": "columns_mobile",
      "label": "t:sections.all.settings.columns_mobile.label",
      "default": 2,
      "visible_if": "{{ section.settings.grid_settings == 'advanced' }}"
    },
    {
      "type": "number",
      "id": "columns_desktop",
      "label": "t:sections.all.settings.columns_desktop.label",
      "default": 4,
      "visible_if": "{{ section.settings.grid_settings == 'advanced' }}"
    },
    {
      "type": "select",
      "id": "grid_gap",
      "label": "t:global.settings.gap.label",
      "default": "m",
      "options": [
        { "value": "0", "label": "t:global.settings.gap.options.none.label" },
        { "value": "xs", "label": "XS" },
        { "value": "s", "label": "S" },
        { "value": "m", "label": "M" },
        { "value": "l", "label": "L" },
        { "value": "xl", "label": "XL" },
        { "value": "xxl", "label": "XXL" }
      ],
      "visible_if": "{{ section.settings.grid_settings == 'advanced' }}"
    },
    {
      "type": "range",
      "id": "card_min_width_px",
      "label": "t:global.settings.card_min_width.label",
      "default": 150,
      "min": 50,
      "max": 500,
      "step": 5,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "t:sections.product_grid.presets.product_grid.name"
    }
  ]
}
{% endschema %}
