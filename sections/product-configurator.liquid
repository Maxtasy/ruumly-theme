<section class="Section Section--PaddingBlockMedium">
  <div class="Section__Inner">
    <div class="ProductConfigurator">
      <div class="ProductConfigurator__Gallery">Gallery</div>

      <div class="ProductConfigurator__Form">
        {% render 'product-form',
          product: product,
          name_prefix: section.id,
          update_variant_url_parameter: true,
          blocks: section.blocks
        %}
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .ProductConfigurator {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .ProductConfigurator__Gallery {
    width: 100%;
    aspect-ratio: 1;
    background-color: var(--t-background);
  }

  @media screen and (min-width: 769px) {
    .ProductConfigurator {
      flex-direction: row;
    }

    .ProductConfigurator__Gallery {
      /* Takes up all the remaining space */
      flex-grow: 1;

      width: auto;
    }

    .ProductConfigurator__Form {
      width: 40%;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Product Configurator",
  "blocks": [
    {
      "name": "Title",
      "type": "title"
    },
    {
      "name": "Product Variant Selector",
      "type": "product-variant-selector",
      "limit": 1
    },
    {
      "name": "Price List",
      "type": "price-list"
    },
    {
      "name": "Quantity Selector",
      "type": "quantity-selector",
      "limit": 1
    },
    {
      "name": "Product Rating",
      "type": "product-rating"
    },
    {
      "name": "Buy Buttons",
      "type": "buy-buttons",
      "limit": 1
    },
    {
      "name": "Shipping Estimation",
      "type": "shipping-estimation"
    }
  ]
}
{% endschema %}
