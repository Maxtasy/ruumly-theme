<section
  class="
    Section
    Section--PaddingBlock{{ section.settings.padding_block | camelcase }}
    ColorScheme--{{ section.settings.color_scheme.id | camelcase }}
  "
>
  <div class="Section__Inner">
    <div class="Comments">
      {% if blog.comments_enabled? %}
        {% form 'new_comment', article, class: 'Comments__Form' %}
          {{ form.errors | default_errors }}

          {% render 'text-field',
            label: 'Your name',
            placeholder: 'John Doe',
            name: 'comment[author]',
            value: form.author
          %}

          {% render 'text-field',
            label: 'Your email',
            placeholder: 'john.doe@mail.com',
            type: 'email',
            name: 'comment[email]',
            value: form.email
          %}

          {% render 'text-field',
            label: 'Your message',
            placeholder: 'Enter message...',
            type: 'text-area',
            name: 'comment[body]',
            value: form.body
          %}

          {% if blog.moderated? %}
            {% render 'text', text: 'Please note that your comments must be approved before they are published.' %}
          {% endif %}

          {% render 'button', variant: 'primary', content: 'post comment' %}
        {% endform %}

        <ul class="Comments__Comments u-NoList">
          {% for comment in article.comments %}
            <li>
              {% render 'comment', author: comment.author, created_at: comment.created_at, content: comment.content %}
            </li>
          {% endfor %}
        </ul>
      {% else %}
        {% render 'text', text: 'Comments disabled.' %}
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  .Comments {
    display: flex;
    flex-direction: column;
    gap: var(--size-xl);
  }

  .Comments__Form {
    display: flex;
    flex-direction: column;
    gap: var(--size-s);
    width: 100%;
    max-width: 600px;
  }

  .Comments__Comments {
    display: flex;
    flex-direction: column;
    gap: var(--size-s);
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:sections.comment.name",
  "enabled_on": {
    "templates": ["article"]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.headers.section_appearance.content"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.settings.color_scheme.label",
      "info": "t:sections.all.settings.color_scheme.info"
    },
    {
      "type": "select",
      "id": "padding_block",
      "label": "t:sections.all.settings.padding_block.label",
      "default": "medium",
      "options": [
        { "value": "none", "label": "t:sections.all.settings.padding_block.options.none.label" },
        { "value": "small", "label": "t:sections.all.settings.padding_block.options.small.label" },
        { "value": "medium", "label": "t:sections.all.settings.padding_block.options.medium.label" },
        { "value": "large", "label": "t:sections.all.settings.padding_block.options.large.label" }
      ]
    },
    {
      "type": "header",
      "content": "t:sections.all.headers.section_content.content"
    },
    {
      "type": "text",
      "id": "placeholder_text",
      "label": "t:sections.comment.settings.placeholder_text.label",
      "info": "t:sections.comment.settings.placeholder_text.info",
      "default": "t:sections.comment.settings.placeholder_text.default"
    }
  ],
  "presets": [
    {
      "name": "t:sections.comment.presets.comment.name"
    }
  ]
}
{% endschema %}
