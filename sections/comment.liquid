<section
  class="
    Section
    Section--Narrow
    Section--PaddingBlock{{ section.settings.padding_block | camelcase }}
    ColorScheme--{{ section.settings.color_scheme.id | camelcase }}
  "
>
  <div class="Section__Inner">
    <div class="Comments">
      {% if blog.comments_enabled? %}
        {% form 'new_comment', article, class: 'Comments__Form' %}
          {{ form.errors | default_errors }}

          {% assign name_label = 'inputs.name.label' | t %}
          {% assign name_placeholder = 'inputs.name.placeholder' | t %}
          {% render 'text-field',
            label: name_label,
            placeholder: name_placeholder,
            name: 'comment[author]',
            value: form.author
          %}

          {% assign email_label = 'inputs.email.label' | t %}
          {% assign email_placeholder = 'inputs.email.placeholder' | t %}
          {% render 'text-field',
            label: email_label,
            placeholder: email_placeholder,
            type: 'email',
            name: 'comment[email]',
            value: form.email
          %}

          {% assign message_label = 'inputs.message.label' | t %}
          {% assign message_placeholder = 'inputs.message.placeholder' | t %}
          {% render 'text-field',
            label: message_label,
            placeholder: message_placeholder,
            type: 'text-area',
            name: 'comment[body]',
            value: form.body
          %}

          {% if blog.moderated? %}
            {% assign comments_moderated_text = 'comments.comments_moderated' | t %}
            {% render 'text', text: comments_moderated_text %}
          {% endif %}

          {% assign submit_button_text = 'global.submit' | t %}
          {% render 'button', variant: 'primary', content: submit_button_text %}
        {% endform %}

        {% if article.comments_count == 0 %}
          {% assign comment_count_text = 'comments.comments_none' | t %}
          {% render 'text', text: comment_count_text %}
        {% else %}
          {% assign comment_count_text = 'comments.comments_count' | t: count: article.comments_count %}
          {% render 'text', text: comment_count_text %}

          <ul class="Comments__Comments u-NoList">
            {% for comment in article.comments %}
              <li>
                {% render 'comment', author: comment.author, created_at: comment.created_at, content: comment.content %}
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      {% else %}
        {% assign comments_disabled_text = 'comments.comments_disabled' | t %}
        {% render 'text', text: comments_disabled_text %}
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  .Comments {
    display: flex;
    flex-direction: column;
    gap: var(--size-xl);
  }

  .Comments__Form {
    display: flex;
    flex-direction: column;
    gap: var(--size-s);
  }

  .Comments__Comments {
    display: flex;
    flex-direction: column;
    gap: var(--size-s);
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:sections.comment.name",
  "enabled_on": {
    "templates": ["article"]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.headers.section_appearance.content"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.settings.color_scheme.label",
      "info": "t:sections.all.settings.color_scheme.info"
    },
    {
      "type": "select",
      "id": "padding_block",
      "label": "t:sections.all.settings.padding_block.label",
      "default": "medium",
      "options": [
        { "value": "none", "label": "t:sections.all.settings.padding_block.options.none.label" },
        { "value": "small", "label": "t:sections.all.settings.padding_block.options.small.label" },
        { "value": "medium", "label": "t:sections.all.settings.padding_block.options.medium.label" },
        { "value": "large", "label": "t:sections.all.settings.padding_block.options.large.label" }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.comment.presets.comment.name"
    }
  ]
}
{% endschema %}
