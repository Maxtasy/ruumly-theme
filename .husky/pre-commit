#!/usr/bin/env bash

BRANCH=$(git branch --show-current)
echo "Checking branch: $BRANCH"

if [[ ! "$BRANCH" =~ ^(feature|component|section|fix|chore|ci|a11y)/[a-z0-9-]+(-[a-z0-9-]+)*$ ]]; then
  echo "‚ùå Invalid branch name: $BRANCH"
  echo "Allowed prefixes: feature/, component/, section/, fix/, chore/, ci/, a11y/"
  echo ""
  echo "üí° Hint: You can rename your branch with:"
  echo "   git branch -m <NEW_BRANCH_NAME>"
  exit 1
fi

echo "‚úÖ Branch name validation passed"
