<div class="IconBlock">
  {% render 'icon', icon: block.settings.icon, size: block.settings.size %}
</div>

{% stylesheet %}
  .IconBlock {
    display: flex;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Icon",
  "settings": [
    {
      "type": "select",
      "id": "icon",
      "label": "Icon",
      "default": "default",
      "options": [
        { "value": "default", "label": "Default" },
        { "value": "heart", "label": "Heart" },
        { "value": "info", "label": "Info" },
        { "value": "percent", "label": "Percent" },
        { "value": "star", "label": "Star" },
        { "value": "eye", "label": "Eye" },
        { "value": "eye-off", "label": "Eye Off" },
        { "value": "landmark", "label": "Landmark" },
        { "value": "leafy-green", "label": "Leafy Green" },
        { "value": "menu", "label": "menu" },
        { "value": "minus", "label": "Minus" },
        { "value": "plus", "label": "Plus" },
        { "value": "search", "label": "Search" },
        { "value": "shopping-cart", "label": "Shopping Cart" },
        { "value": "square-arrow-left", "label": "Square Arrow Left" },
        { "value": "square-arrow-right", "label": "Square-Arrow-Right" },
        { "value": "utensils-crossed", "label": "Utensils Crossed" },
        { "value": "user-round", "label": "User Round" },
        { "value": "x", "label": "X" }
      ]
    },
    {
      "type": "select",
      "id": "size",
      "label": "Size",
      "default": "medium",
      "options": [
        { "value": "small", "label": "Small" },
        { "value": "medium", "label": "Medium" },
        { "value": "large", "label": "Large" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Heart",
      "settings": {
        "icon": "heart"
      }
    },
    {
      "name": "Star",
      "settings": {
        "icon": "star"
      }
    }
  ]
}
{% endschema %}
